# Application
NODE_ENV=development
PORT=3000
APP_SECRET=your_app_secret_key
API_URL=http://localhost:3000

# Database (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=adorable_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h

# Location Services (Mapbox)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12

# Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=your_aws_region

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-firebase-measurement-id

# Mapbox Configuration
EXPO_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# Google OAuth Configuration
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
EXPO_PUBLIC_GOOGLE_PROJECT_ID=your-google-project-id
EXPO_PUBLIC_GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
